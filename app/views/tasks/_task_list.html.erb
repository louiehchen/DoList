<% if tasks.empty? %>
	<span class="text-warning">There are no tasks!</span>
<% else %>
	<table class="table table-hover table-bordered">
  <thead>
    <tr>
      <th>Title</th>
      <th>Created at</th>
      <th>Completed</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% tasks.each do |task| %>
      <tr>
        <td>
          <strong>
            <%= task.title %>
          </strong>
        </td>
        <td class="text-info">
          <%= task.created_at %>
        </td>
        <td class="text-success">
          <%= task.completed %>
        </td>
        <td>
        	<% if task.user == current_user %>
		        <%= link_to task_path(task), class: 'btn btn-danger font', remote: true, method: :delete, data: {confirm: "Are you sure you want to delete task #{task.title}?"} do %>
	  					<i class="fa fa-times" aria-hidden="true"></i> Remove
						<% end %>
						<%= link_to edit_task_path(task), class: 'btn btn-warning font', remote: true do %>
	  					<i class="fa fa-pencil" aria-hidden="true"></i> Edit 
	  				<% end %>
  				<% end %>
      	</td>
      </tr>
    <% end %>
  </tbody>
</table>

<% end %>